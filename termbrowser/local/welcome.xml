<term type="m100_xml">
  <container direction="row" width="100pc" background="black" foreground="white" padding-top="3">
    <container padding-left="2pc" width="18pc">
      <!-- <link width="15" key="1" background="cyan" foreground="black" url="term://settings">Settings</link>
      <br/>
      <br/> -->
      <link width="15" key="1" background="cyan" foreground="black" url="term://exit">Exit</link>
    </container>
    <container width="60pc">
      <text align="center" font="small" padding-bottom="5">
        Term
      </text>
      <input icon="\u2315" width="100pc" submit="search"></input>
    </container>
  </container>
  <table>
    <row>
      <cell>
        <text>
          header 1
        </text>
      </cell>
      <cell>
        <text>
          header 2
        </text>
      </cell>
    </row>
    <row>
      <cell>
        <text>
          row 1
        </text>
      </cell>
      <cell>
        <text>
          row 2
        </text>
      </cell>
    </row>  
  </table>
  <action name="search">
    visit("http://localhost:3000/search?q=" + encode(value))
  </action>
</term>
